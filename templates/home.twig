{% extends 'common.twig' %}

{% block content %}
  <div class="jumbotron my-5">
    <p>
      There are currently {{ nbArticles }} articles,
      {{ authors|length }} authors and {{ categories|length }} categories.
    </p>
    {% for article in articles %}
      <h1>{{ article.title }}</h1>
      <p>{{ article.text|nl2br }}</p>
      <p>
        {% for category in article.categories %}
            {{ category }},
        {% endfor %}
      </p>
      <p>by {{ article.author }} on {{ article.date|date("F jS, Y") }}</p>
    {% endfor %}
  </div>
{% endblock %}
