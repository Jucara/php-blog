{% extends 'common.twig' %}

{% block content %}
  {% for article in articles %}
    <h1>{{ article.title }}</h1>
    <p>{{ article.text }}</p>
    <p>
      {% for category in article.categories %}
          {{ category }},
      {% endfor %}
    </p>
    <p>by {{ article.author }} on {{ article.date|date() }}</p>
  {% endfor %}
{% endblock %}
